<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VideoPlayerYas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi ="l" tools:ignore="ObsoleteSdkInt">@color/black</item>
        <!-- Customize your theme here. -->
    </style>
   // Custom Theme-->
    <style name="coolPinkNav" parent="Theme.MaterialComponents.Light">

        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/cool_pink</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/cool_pink</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
<!--        this should  only work in light theme and fix problm work also on hight android >10-->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    //for dialog
    <style name="alertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/white</item>
        
    </style>
     //for Player Activity
    <style name="playerActivityTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/cool_pink</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/cool_pink</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!--        this should  only work in light theme and fix problm work also on hight android >10-->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
</resources>